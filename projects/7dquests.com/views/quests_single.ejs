<% include ./partials/single_header %>
		<section class="post-content-area single-post-area">
			<div class="container">
				<div class="single-post row">
				<div class="meta-description row" itemprop="description">
					<div class="col-lg-3  col-md-3 meta-details">
						<ul class="tags">
							<li><a href="#">Хоррор,</a></li>
							<li><a href="#">Линейный</a></li>
						</ul>
						<div class="user-details row">
							<p class="user-name col-lg-12 col-md-12 col-6"><a href="#"><%= d.min_players %>-<%= d.max_players %>  Игроков</a> <span class="lnr lnr-user"></span></p>
							<p class="date col-lg-12 col-md-12 col-6"><a href="#"><%= d.createdAt.toLocaleDateString("en-US") %></a> <span class="lnr lnr-calendar-full"></span></p>
							<p class="view col-lg-12 col-md-12 col-6"><a href="#">  Просмотров: <%= d.counter %></a> <span class="lnr lnr-eye"></span></p>
							<p class="view col-lg-12 col-md-12 col-6"><a href="#"> Уровень страха:



								<% for (i =  0; i <  d.fear_level; i++) {	%>
				<i class="fa fa-fw fa-flash"></i>
				<% 		}	%>


							</a> </p>
							<p class="comments col-lg-12 col-md-12 col-6"><a href="#">5 отзывов</a> <span class="lnr lnr-bubble"></span></p>
							<ul class="social-links col-lg-12 col-md-12 col-6">
								<%- 		(typeof(d.facebook_link) !== 'undefined' ) ? '<li><a href="#"><i class="fa fa-facebook"></i></a></li>' : '' %>
								<%- 		(typeof(d.twitter_link) !== 'undefined' ) ? '<li><a href="#"><i class="fa fa-twitter"></i></a></li>' : '' %>
							</ul>
						</div>
					</div>
					<div class="col-lg-9 col-md-9">
						<a class="posts-title" href="#"><h3> <%= d.quest_name %> :  <%= d.quest_legend %> !</h3></a>
						<p class="excert">
				<%= d.description %>
						</p>
					</div>
					</div>


				</div>

					<div class="single-post row special">
					<div class=" cover">
					  <div class="col-lg-12">
					  <div class="text-center">
<h4>
